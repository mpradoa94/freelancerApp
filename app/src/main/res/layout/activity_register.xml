<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mpa.freelancer.register">

    <TextView
        android:text="Name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/name" />

    <TextView
        android:text="Mail"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="40dp"
        android:id="@+id/email" />

    <TextView
        android:text="Password"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="43dp"
        android:id="@+id/password" />



    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Freelancer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:id="@+id/register" />

    <TextView
        android:text="Password Confirmation"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/confirmPassword"
        android:layout_below="@+id/password"
        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:textAlignment="center" />

    <RadioButton
        android:text="Freelancer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:id="@+id/Freelancer"
        android:layout_below="@+id/confirmPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:text="Employer"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Freelancer"
        android:layout_toEndOf="@+id/register"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/empolyer"
        android:layout_below="@+id/Freelancer"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/Freelancer"
        android:layout_centerHorizontal="false"
        android:layout_alignBaseline="@+id/Freelancer" />

</RelativeLayout>
