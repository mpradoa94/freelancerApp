<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.example.mpa.freelancer.Profile">

            <!-- A CardView that contains the skills -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/top_container"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/header_imageview"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true" />

                    <!--Information that goes after the profile image-->
                    <LinearLayout
                        android:id="@+id/information_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@+id/header_imageview"
                        android:gravity="center"
                        android:paddingTop="32dp"
                        android:paddingBottom="20dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/header_name"
                            android:text="Mariana Prado"
                            android:textSize="17dp"
                            android:textColor="#38761d"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/header_occupation"
                                android:gravity="center"
                                android:textColor="#FF707070"
                                android:layout_marginRight="5dp"
                                android:text="Web developer"/>

                            <ImageButton
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:id="@+id/edit_occupation"
                                android:layout_alignParentRight="true"
                                android:background="#FFFFFFFF"
                                android:src="@drawable/edit_icon"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/header_ratings"
                            android:textColor="#FF909090"
                            android:text="Ratings: "/>

                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:layout_below="@+id/information_container"
                        android:background="#70dc68"
                        android:id="@+id/horizontalScrollView"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/horizontal_rate"
                                android:layout_margin="20dp"
                                android:textSize="15dp"
                                android:textColor="#FFFFFFFF"/>

                        </LinearLayout>
                    </HorizontalScrollView>

                    <!--Profile image. Cheat code: negative margin -->
                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:id="@+id/profile_image"
                        android:layout_centerHorizontal="true"
                        android:layout_above="@+id/information_container"
                        android:layout_marginBottom="-16dp"
                        android:clickable="true"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- A CardView that contains the skills -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/skills_container"
                android:layout_below="@+id/top_container"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/horizontalScrollView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:orientation="vertical">

                    <!--Skills header-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/header_skills_list"
                            android:layout_margin="10dp"
                            android:text="Skills"
                            android:textSize="15dp"
                            android:textColor="#6aa84f"/>

                        <ImageButton
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:id="@+id/edit_skills_list"
                            android:layout_alignParentRight="true"
                            android:background="#FFFFFFFF"
                            android:src="@drawable/edit_icon"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                    </RelativeLayout>

                    <ListView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/list_skills"
                        android:layout_below="@+id/header_skills_list" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
